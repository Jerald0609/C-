using System;
using System.Collections.Generic;

class Program
{
    static void Main()
    {
        List<int> scores = new List<int>();
        Console.WriteLine("Enter 10 player scores:");

        while (scores.Count < 10)
        {
            Console.Write($"Score {scores.Count + 1}: ");
            if (int.TryParse(Console.ReadLine(), out int s)) scores.Add(s);
            else Console.WriteLine("Invalid. Try again.");
        }

        scores.Sort((a, b) => b.CompareTo(a)); // Descending
        Console.WriteLine("\n Leaderboard Before:");
        Show(scores);

        Console.Write("\nEnter new player's score: ");
        int newScore = int.Parse(Console.ReadLine());

        int index = scores.FindIndex(s => newScore > s);
        if (index == -1) scores.Add(newScore);
        else scores.Insert(index, newScore);

        Console.WriteLine("\n Leaderboard After:");
        Show(scores);
    }

    static void Show(List<int> scores)
    {
        for (int i = 0; i < scores.Count; i++)
            Console.WriteLine($"#{i + 1}: {scores[i]}");
    }
}
